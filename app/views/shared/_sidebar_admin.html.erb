<div class="fixed overflow-visible left-0 top-20">    
    <aside class="h-screen w-80 flex items-center justify-center bg-white">
        <div class="flex flex-col space-y-6 ">
            <div class="flex flex-row space-x-2 items-center">
                <i class="material-icons">dashboard</i>
                <a href="/dashboard_main"><button>Dashboard</button></a>
            </div>
    
            <div class="flex flex-row space-x-2 items-center">
                <i class="material-icons">task</i>
                <button>Task</button>
            </div>
    
            <div class="flex flex-row space-x-2 items-center">
                <i class="material-icons ">business</i>
                <button>Projects</button>
            </div>
    
            <div class="flex flex-row space-x-2 items-center">
                <i class="material-icons ">badge</i>
                <button>Employees</button>
            </div>
    
            <div class="flex flex-row space-x-2 items-center">
                <i class="material-icons">group_work</i>
                <button>Teams</button>
            </div>
    
            <div>
                <%= image_tag 'mangco_logo', style: "height:90px; width:200px;" %>
            </div>
    
            <div class="flex flex-row space-x-2 items-center">
               <i class="material-icons w-10">manage_accounts</i>
               <button id="settings" class="text-gray-700 font-semibold hover:text-gray-700"><%= @user.name %></button>
            </div>
    
            <div class="flex flex-row space-x-2 items-center">
               <i class="material-icons">logout</i>
               <%= button_to 'Logout', logout_path, method: :delete, class: 'font-semibold text-gray-700'  %>
            </div>
             
        </div>
    </aside>
</div>